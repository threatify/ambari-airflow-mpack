<configuration supports_final="true">
  <!--Configuration options for user authentication into the web application-->
  <property>
    <name>pastgress_password_example</name>
    <value>airflow-secret:postgres_credentials</value>
    <display-name>POSTGRES_PASSWORD_EXAMPLE</display-name>
    <description>(To add values use custom section!) For example if you wanted to mount a kubernetes secret key named `postgres_password` from the kubernetes secret object `airflow-secret` as the environment variable `POSTGRES_PASSWORD` into your workers you would follow the following format</description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
</configuration>
